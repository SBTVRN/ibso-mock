<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- Constants -->
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.action.extension" value="action"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.custom.i18n.resources" value="messages"/>
    <constant name="struts.multipart.maxSize" value="2097152"/>
    <constant name="struts.codebehind.pathPrefix" value="/"/>
    <constant name="struts.configuration.xml.reload" value="true"/>

    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor-stack name="defaultStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="conversionError"/>
                <!--<interceptor-ref name="validation">-->
                    <!--<param name="excludeMethods">cancel,execute,delete,edit,list</param>-->
                <!--</interceptor-ref>-->
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>



        <global-results>
            <result name="dataAccessFailure">dataAccessFailure.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="org.springframework.dao.DataAccessException" result="dataAccessFailure"/>
        </global-exception-mappings>

        <!-- List of configurations -->
        <action name="pageSizeChange" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction" method="list">
            <result name="success">/WEB-INF/pages/configurationList.jsp</result>
        </action>

        <!-- List of configurations -->
        <action name="configurations" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction" method="list">
            <result name="success">/WEB-INF/pages/configurationList.jsp</result>
            <result name="input">/WEB-INF/pages/configurationList.jsp</result>
        </action>

        <!-- Edit configuration -->
        <action name="editConfiguration" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction" method="edit">
            <result name="success">/WEB-INF/pages/configurationForm.jsp</result>
            <result name="input">/WEB-INF/pages/configurationList.jsp</result>
        </action>

        <!-- Import configuration -->
        <action name="setImportConfigurations" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction" method="list">
            <result name="success">/WEB-INF/pages/configurationUpload.jsp</result>
        </action>

        <!-- Import configuration -->
        <action name="importConfigurations" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="fileUpload">
                    <!--<param name="allowedTypes"> text/plain</param>-->
                    <param name="maximumSize">10485760</param>
                </interceptor-ref>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*</param>
                </interceptor-ref>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>

                <result name="success" type="redirectAction">setImportConfigurations</result>
                <!--<result name="input">pages/fileupload.jsp</result>-->
        </action>

        <!-- actions configurations -->
        <action name="actions" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction">
            <result name="success" type="redirectAction">configurations</result>
        </action>

        <!-- Save configuration -->
        <action name="saveConfiguration" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction">
            <result name="cancel" type="redirectAction">configurations</result>
            <result name="delete" type="redirectAction">configurations</result>
            <result name="input" type="redirectAction">configurations</result>
            <result name="success" type="redirectAction">configurations</result>
        </action>



        <!--&lt;!&ndash; Export configuration &ndash;&gt;-->
        <!--<action name="exportConfiguration" class="ru.sbt.drtmn.lab.webapp.action.ConfigurationAction" method="exportSelected">-->
            <!--<result name="success" type="redirectAction">configurations</result>-->
        <!--</action>-->

    </package>


</struts>
